import java.util.*;
 
public class Main {
	static long NumberSum(long N) {
		if(N==1)
			return 1;
		return NumberSum(N-1)+N;			
    }
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        long N = scanner.nextLong();
        System.out.println(NumberSum(N));
    }
}
